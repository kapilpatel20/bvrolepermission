<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Brainvire</title>
        {% trans_default_domain 'FOSUserBundle' %}

        {% block header %}
            {% block stylesheets %}

                <!-- Bootstrap 3.3.5 -->
                <link href="{{ asset('bundles/bvrole/css/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
                <!-- Font Awesome -->
                <link href="{{ asset('bundles/bvrole/css/font-awesome.min.css') }}"
                      rel="stylesheet" type="text/css" />
                <!-- Ionicons -->
                <link href="{{ asset('bundles/bvrole/css/ionicons.min.css') }}"
                      rel="stylesheet" type="text/css" />
                <!-- Theme style -->
                <link
                    href="{{ asset('bundles/bvrole/css/dist/css/AdminLTE.min.css') }}"
                    rel="stylesheet" type="text/css" />
                <link
                    href="{{ asset('bundles/bvrole/js/plugins/iCheck/square/blue.css') }}"
                    rel="stylesheet" type="text/css" />
            {% endblock stylesheets %}

        {% endblock header %}
    </head>

    <body class="hold-transition login-page">
        {% block body %}
            <div class="register-box">
                <div class="register-logo">
                    <a href="#">Brainvire</a>
                </div>

                <div class="register-box-body">                    
                    <p class="login-box-msg">Enter New Password</p>
                    <p>{% include "BvRoleBundle::flashMessage.html.twig" %}</p>
                    <form action="{{ path('user_change_password') }}" {{ form_enctype(form) }} method="POST" id="fos_user_change_password">
                        <div class="form-group has-feedback {% if not form.current_password.vars.valid %}serverError{% endif %}">
                            <div> {{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': 'Current Password'}}) }}
                                {% if form_errors(form.current_password) %}{{ form_errors(form.current_password) }}{% endif %}  <span class="glyphicon glyphicon-lock form-control-feedback c-font-grey"></span>
                            </div>
                        </div>
                        <div class="form-group has-feedback">
                            <div>{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'New Password'}}) }}
                                {% if form_errors(form.plainPassword.first) %}{{ form_errors(form.plainPassword.first) }}{% endif %}<span class="glyphicon glyphicon-lock form-control-feedback c-font-grey"></span>
                            </div>
                        </div>
                        <div class="form-group has-feedback">
                            <div> {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'Confirm Password'}}) }}
                                {% if form_errors(form.plainPassword.second) %}{{ form_errors(form.plainPassword.second) }}{% endif %}
                                <span class="glyphicon glyphicon-lock form-control-feedback c-font-grey"></span>
                            </div>
                        </div>

                        {{ form_rest(form)}}
                        <div class="bottom_div">
                            <div class="fulldiv">
                                <button type="submit" class="btn btn-primary btn-block btn-flat">Send</button>
                            </div><!-- /.col -->
                        </div>
                    </form>

                </div><!-- /.form-box -->
            </div><!-- /.register-box -->

        {% endblock body %}
    </body>

    {% block javascript %}

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
                        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
                        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
                    <![endif]-->

        <!-- jQuery 2.1.4 -->
        <script
        src="{{ asset('bundles/bvrole/js/plugins/jQuery/jQuery-2.1.4.min.js') }}"></script>
        <!-- Bootstrap 3.3.5 -->
        <script
        src="{{ asset('bundles/bvrole/css/bootstrap/js/bootstrap.min.js') }}"></script>
        <!-- iCheck -->
        <script src="{{ asset('bundles/bvrole/js/plugins/iCheck/icheck.min.js')}}"></script>
        <script>
            $(function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_square-blue',
                    radioClass: 'iradio_square-blue',
                    increaseArea: '20%' // optional
                });
            });
        </script>
    {% endblock javascript %}
</html>
