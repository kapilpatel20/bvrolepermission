<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title %}Brinvire Default CMS Admin{% endblock %}</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta
            content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"
            name="viewport">

        {% block stylesheets %}

            <!-- Bootstrap 3.3.5 -->
            <link
                href="{{ asset('bundles/bvrole/css/bootstrap/css/bootstrap.min.css') }}"
                rel="stylesheet" type="text/css" />
            <!-- Font Awesome -->
            <link href="{{ asset('bundles/bvrole/css/font-awesome.min.css') }}"
                  rel="stylesheet" type="text/css" />
            <!-- Ionicons -->
            <link href="{{ asset('bundles/bvrole/css/ionicons.min.css') }}"
                  rel="stylesheet" type="text/css" />
            <!-- Theme style -->
            <link
                href="{{ asset('bundles/bvrole/css/dist/css/AdminLTE.min.css') }}"
                rel="stylesheet" type="text/css" />
            <!-- AdminLTE Skins. Choose a skin from the css/skins
                     folder instead of downloading all of them to reduce the load. -->
            <link
                href="{{ asset('bundles/bvrole/css/dist/css/skins/_all-skins.min.css') }}"
                rel="stylesheet" type="text/css" />
            <!-- iCheck -->
            <link
                href="{{ asset('bundles/bvrole/js/plugins/iCheck/flat/blue.css') }}"
                rel="stylesheet" type="text/css" />
            <!-- Morris chart -->
            <link
                href="{{ asset('bundles/bvrole/js/plugins/morris/morris.css') }}"
                rel="stylesheet" type="text/css" />
            <link href="{{ asset('bundles/bvrole/js/plugins/datatables/dataTables.bootstrap.css') }}" rel="stylesheet" type="text/css" />
            <!-- jvectormap -->
            <link
                href="{{ asset('bundles/bvrole/js/plugins/jvectormap/jquery-jvectormap-1.2.2.css') }}"
                rel="stylesheet" type="text/css" />
            <!-- Date Picker -->
            <link
                href="{{ asset('bundles/bvrole/js/plugins/datepicker/datepicker3.css') }}"
                rel="stylesheet" type="text/css" />
            <!-- Daterange picker -->
            <link
                href="{{ asset('bundles/bvrole/js/plugins/daterangepicker/daterangepicker-bs3.css') }}"
                rel="stylesheet" type="text/css" />
            <!-- bootstrap wysihtml5 - text editor -->
            <link
                href="{{ asset('bundles/bvrole/js/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css') }}"
                rel="stylesheet" type="text/css" />
            <!-- admin custom style -->
            

        {% endblock %}

    </head>

    <body class="hold-transition skin-blue sidebar-mini">
        <div class="wrapper">

            {% block header %}
                <header class="main-header">
                    <!-- Logo -->
                    <a href="admin_index.html" class="logo"> <!-- mini logo for sidebar mini 50x50 pixels -->
                        <span class="logo-mini"><b>B</b>v</span> <!-- logo for regular state and mobile devices -->
                        <span class="logo-lg"><b>Brainvire</b></span>
                    </a>
                    <!-- Header Navbar: style can be found in header.less -->
                    <nav class="navbar navbar-static-top" role="navigation">
                        <!-- Sidebar toggle button-->
                        <a href="#" class="sidebar-toggle" data-toggle="offcanvas"
                           role="button"> <span class="sr-only">Toggle navigation</span>
                        </a>
                        <div class="navbar-custom-menu">
                            <ul class="nav navbar-nav">
                                <!-- User Account: style can be found in dropdown.less -->
                                <li class="dropdown user"><a href="{{ path('user_edit_profile') }}" style="nostyle"><span class="hidden-xs">Super
                                            Admin</span></a></li>
                                <li class="lg"><span><i class="fa fa-sign-out"></i> <a href="{{ path('user_logout')}}" >Logout</a></span>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </header>
            {% endblock %}

            <!-- Left side column. contains the logo and sidebar -->
            {% block sidebar %} {{ include('BvRoleBundle::sidebar.html.twig', { 'article': "" }) }} {% endblock %}

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">{% block body %}{% endblock %}</div>
            <!-- /.content-wrapper -->

            <footer class="main-footer">
                <strong>Copyright &copy; 2015-2016 <a href="#">Brainvire</a>.
                </strong> All rights reserved.
            </footer>

            <!-- Add the sidebar's background. This div must be placed immediately after the control sidebar -->

        </div>
        <!-- ./wrapper -->

        {% block javascripts %}
            <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
            <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
            <!--[if lt IE 9]>
                            <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
                            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
                        <![endif]-->

            <!-- jQuery 2.1.4 -->
            <script
            src="{{ asset('bundles/bvrole/js/plugins/jQuery/jQuery-2.1.4.min.js') }}"></script>
            <!-- jQuery UI 1.11.4 -->
            <script
            src="{{ asset('bundles/bvrole/js/jquery/jquery-ui.min.js') }}"></script>
            <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
            <script>
                $.widget.bridge('uibutton', $.ui.button);
            </script>
            <!-- Bootstrap 3.3.5 -->
            <script src="{{ asset('bundles/bvrole/css/bootstrap/js/bootstrap.min.js') }}"></script>
            <!-- Morris.js charts -->
            <script src="{{ asset('bundles/bvrole/js/raphael-min.js') }}"></script>

            <!-- Sparkline -->
            <script src="{{ asset('bundles/bvrole/js/plugins/sparkline/jquery.sparkline.min.js') }}"></script>
            <!-- jvectormap -->
            <script src="{{ asset('bundles/bvrole/js/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js') }}"></script>
            <script src="{{ asset('bundles/bvrole/js/plugins/jvectormap/jquery-jvectormap-world-mill-en.js') }}"></script>
            <!-- jQuery Knob Chart -->
            <script
            src="{{ asset('bundles/bvrole/js/plugins/knob/jquery.knob.js') }}"></script>
            <!-- daterangepicker -->
            <script src="{{ asset('bundles/user/js/moment.min.js') }}"></script>
            <script
            src="{{ asset('bundles/bvrole/js/plugins/daterangepicker/daterangepicker.js') }}"></script>
            <!-- datepicker -->
            <script
            src="{{ asset('bundles/bvrole/js/plugins/datepicker/bootstrap-datepicker.js') }}"></script>
            <!-- Bootstrap WYSIHTML5 -->
            <script
            src="{{ asset('bundles/bvrole/js/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js') }}"></script>
            <!-- Slimscroll -->
            <script
            src="{{ asset('bundles/bvrole/js/plugins/slimScroll/jquery.slimscroll.min.js') }}"></script>
            <!-- FastClick -->
            <script
            src="{{ asset('bundles/bvrole/js/plugins/fastclick/fastclick.min.js') }}"></script>
            <!-- AdminLTE App -->
            <script src="{{ asset('bundles/bvrole/css/dist/js/app.min.js') }}"></script>
            <!-- AdminLTE dashboard demo (This is only for demo purposes) -->

            <!-- AdminLTE for demo purposes -->
            <script src="{{ asset('bundles/bvrole/css/dist/js/demo.js') }}"></script>

            <script src="{{ asset('bundles/bvrole/js/plugins/datatables/dataTables.bootstrap.min.js') }}"></script>
             	<script src="{{ asset('bundles/bvrole/js/plugins/datatables/jquery.dataTables.min.js') }}"></script>
                <script src="{{ asset('bundles/bvrole/js/plugins/datatables/dataTables.buttons.min.js') }}"></script>
                <script src="{{ asset('bundles/bvrole/js/plugins/datatables/buttons.html5.min.js') }}"></script>
             	<script>
             		$(function () {

             	        $('#example1').DataTable({
             	          "paging": true,
             	          "lengthChange": false,
            	          "searching": false,
            	          "ordering": false,
            	          "info": false,
             	          "autoWidth": false
             	        });
                   	});
            </script>
            <script>
                $(document).ready(function () {

                    $('select#orderBy').on('change', function () {
                        $('form#headerSearch').submit();
                    });

                });
            </script>
        {% endblock %}

    </body>
</html>